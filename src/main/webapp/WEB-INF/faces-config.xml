<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>

    <navigation-rule>
        <from-view-id>/faces/register-edit.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{createCustomerBean.saveCustomer}</from-action>
            <from-outcome>home</from-outcome>
            <to-view-id>/faces/model-home.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/faces/model-home.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{deleteCustomersBean.deleteCustomer}</from-action>
            <from-outcome>refresh</from-outcome>
            <to-view-id>/faces/model-home.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>